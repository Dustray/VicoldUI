<Window x:Class="Vicold.Popup.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vicold.Popup.Demo"
        mc:Ignorable="d"
        Title="Vicold.Popup" Height="400" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="20">
            <Button Content="0" Click="btnNormal_Click" Width="60" Height="30" Tag="0" Margin="3"/>
            <Button Content="1" Click="btnNormal_Click" Width="60" Height="30" Tag="1" Margin="3"/>
            <Button Content="2" Click="btnNormal_Click" Width="60" Height="30" Tag="2" Margin="3"/>
            <Button Content="3" Click="btnNormal_Click" Width="60" Height="30" Tag="3" Margin="3"/>
            <Button Content="4" Click="btnNormal_Click" Width="60" Height="30" Tag="4" Margin="3"/>
            <Button Content="5" Click="btnNormal_Click" Width="60" Height="30" Tag="5" Margin="3"/>
            <Button Content="6" Click="btnNormal_Click" Width="60" Height="30" Tag="6" Margin="3"/>
        </StackPanel>
    </Grid>
</Window>
